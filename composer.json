{
    "name": "wedevs/dokan-pro",
    "description": "An e-commerce marketplace plugin for WordPress.",
    "type": "wordpress-plugin",
    "license": "GPL2",
    "authors": [
        {
            "name": "weDevs",
            "email": "info@wedevs.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.6.0",
        "wikimedia/composer-merge-plugin": "^1.3@dev",
        "hybridauth/hybridauth": "^3.0@dev"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "dev-master",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.3",
        "tareq1988/wp-php-cs-fixer": "dev-master",
        "phpcompatibility/phpcompatibility-wp": "dev-master",
        "phpunit/phpunit": "^5.7.27"
    },
    "scripts": {
      "phpcs": [
        "phpcs -p -s"
      ],
      "phpcbf": [
        "phpcbf -p"
      ]
    },
    "autoload" : {
      "psr-4": {
          "WeDevs\\DokanPro\\": "includes/"
      }
    },
    "extra": {
      "merge-plugin": {
        "include": [
          "modules/*/composer.json"
        ],
        "recurse": true,
        "replace": false,
        "ignore-duplicates": false,
        "merge-dev": true,
        "merge-extra": false,
        "merge-extra-deep": false,
        "merge-scripts": false
      }
    }
}
